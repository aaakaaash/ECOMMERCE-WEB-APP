<%- include("../../views/partials/admin/header") %>

<div class="content-wrapper">
  <div class="container-fluid">
    <div class="row mb-4">
      <div class="col">
        <br><br><br><br>
        <h1 class="h2">Coupons</h1>
      </div>
      <div class="col text-end">
        <br><br><br><br>
        <a href="/admin/create-coupon" class="btn btn-primary">+ Create Coupon</a>
      </div>
    </div>
    
    <div class="card">
      <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
          <li class="nav-item"><a class="nav-link active" href="#all">All</a></li>
          <li class="nav-item"><a class="nav-link" href="#active">Active</a></li>
          <li class="nav-item"><a class="nav-link" href="#expired">Expired</a></li>
        </ul>
      </div>
      <div class="card-body">
        <div class="d-flex justify-content-end mb-3">
          <button class="btn btn-outline-secondary me-2">Select Date</button>
          <button class="btn btn-outline-secondary">Filters</button>
        </div>
        
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Coupon Code</th>
                <th>Discount</th>
                <th>Max</th>
                <th>Min</th>
                <th>Start</th>
                <th>Expiry</th>
                <th>Status</th>
                <th>Created</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% if(coupons.length > 0) { %>
                <% coupons.forEach(coupon => { %>
                  <tr>
                    <td><%= coupon.code %></td>
                    <td><%= coupon.discountValue %>%</td>
                    <td><%= coupon.maxPurchaseAmount %></td>
                    <td><%= coupon.minPurchaseAmount %></td>
                    <td><%= coupon.startDate.toLocaleDateString() %></td>
                    <td><%= coupon.endDate.toLocaleDateString() %></td>
                    <td><span class="badge bg-<%= coupon.status === 'active' ? 'success' : 'danger' %>"><%= coupon.status %></span></td>
                    <td><%= coupon.createdAt.toLocaleDateString() %></td>
                    <td>
                      <a href="/admin/coupons/edit/<%= coupon._id %>" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                      <a href="/admin/coupons/delete/<%= coupon._id %>" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="9" class="text-center">
                    <h4>No coupons found</h4>
                    <a href="/admin/coupons/create" class="btn btn-primary mt-2">+ Add Coupon</a>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../../views/partials/admin/footer") %>