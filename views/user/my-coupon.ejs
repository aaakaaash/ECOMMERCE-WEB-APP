<div class="container-fluid">
    <%- include("../../views/partials/user/header") %>
  
    <div class="dashboard-container">
        
      <%- include("../../views/partials/user/sidebar") %>
  
      <div class="dashboard-content" id="dashboardContent">
        <div class="card mb-3">
          <div class="card-header">
            <h5 class="card-title">Available Coupons</h5>
          </div>
          <div class="card-body">
            <% if (coupons && coupons.length > 0) { %>
              <% coupons.forEach(coupon => { %>
                <div class="row align-items-center mb-3">
                  <div class="col-8">
                    <h6 class="text-success mb-0"><%= coupon.description %></h6>
                    <p class="mb-0">
                      <%= coupon.discountType === 'fixed' 
                            ? `Flat â‚¹${coupon.discountValue} OFF` 
                            : `${coupon.discountValue}% OFF` 
                      %> (Valid till: <%= coupon.endDate.toLocaleDateString('en-GB', { hour: '2-digit', minute: '2-digit' }) %>)
                    </p>
                  </div>
                  <div class="col-4 text-end">
                    <p class="mb-0 text-muted">Valid till <%= coupon.endDate.toLocaleDateString('en-GB') %></p>
                    <a href="#" class="text-primary">View T&amp;C</a>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <p>No coupons available</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  
    <%- include("../../views/partials/user/footer") %>
  </div>
  