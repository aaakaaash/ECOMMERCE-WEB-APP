

<style>
  .dashboard-content {
    padding: 20px;
  }

  .wallet-balance {
    background-color: #f8f9fa;
    border-radius: 8px;
    padding: 20px;
  }

  .table th {
    font-weight: 600;
  }

  .badge {
    font-size: 0.85em;
    padding: 0.35em 0.65em;
  }

  .card {
    border: none;
    border-radius: 10px;
  }

  .card-title {
    color: #333;
    font-weight: 600;
  }

  .alert {
    border-radius: 8px;
  }


  @media (max-width: 576px) {

    .dashboard-container {
      flex-direction: column;
    }
    .dashboard-content {
      padding: 10px;
    }

    .wallet-balance {
      padding: 10px;
    }

    .table th, .table td {
      font-size: 0.8rem;
    }

    .badge {
      font-size: 0.7em;
      padding: 0.3em 0.5em;
    }

    .d-flex {
      flex-direction: column;
    }

    .card-title {
      font-size: 1.5rem;
    }
  }
</style>


<%- include("../../views/partials/user/header") %>

<div class="container-fluid" style="background-color: #f1f3f6;">
   
    <%- include("../../views/partials/user/breadcrumb") %>

    <div class="dashboard-container">
        
      <%- include("../../views/partials/user/sidebar") %>
  
      <div class="dashboard-content" id="dashboardContent">
        
        <div class="col-md-9">
          <div class="card shadow-sm mb-4">
            <div class="card-body">
              <h2 class="card-title mb-4">Wallet</h2>
              
              <div class="wallet-balance mb-4">
                <div class="d-flex justify-content-between align-items-center">
                  <h4 class="mb-0">Your Balance</h4>
                  <h3 class="text-success mb-0">₹<%= balance.toFixed(2) %></h3>
                </div>
              </div>
              
              <h4 class="mb-3">Transactions</h4>
              <% if (transactions && transactions.length === 0) { %>
                <div class="alert alert-info" role="alert">
                  No transactions yet.
                </div>
              <% } else { %>
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead class="thead-light">
                      <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Description</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% transactions.forEach(transaction => { %>
                        <tr>
                          <td><%= new Date(transaction.date).toLocaleString('en-US', { 
                            year: 'numeric', 
                            month: '2-digit', 
                            day: '2-digit', 
                            hour: '2-digit', 
                            minute: '2-digit', 
                            second: '2-digit', 
                            hour12: true // or false for 24-hour format
                        }) %></td>
                        
                          <td>
                            <span class="badge <%= transaction.type === 'credit' ? 'bg-success' : 'bg-danger' %>">
                              <%= transaction.type === 'credit' ? 'Credit' : 'Debit' %>
                            </span>
                          </td>
                          <td class="<%= transaction.type === 'credit' ? 'text-success' : 'text-danger' %>">
                            ₹<%= transaction.amount.toFixed(2) %>
                          </td>
                          <td><%= transaction.description || 'N/A' %></td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              <% } %>
            </div>
          </div>
        </div>

      </div>
    </div>
</div>

<%- include("../../views/partials/user/footer") %>